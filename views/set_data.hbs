<nav class="navbar bg-primary" data-bs-theme="dark">
    <a href="/logout" class="for_href">Exit from your account</a>
    <img class="avatarka" src="user.png" alt="{{user.username}}" style="postion:absolute; bottom:91%; left:89%;">
    <a href="/profile" class="for_href">Back</a>
</nav>

<h1> {{title}} </h1>


{{#if messages.error}}
    <div class="error">{{error.flash}}</div>
{{/if}}
{{#if messages.success}}
    <div class="success">{{success.flash}}</div>
{{/if}}
<form action="/add_data" method="POST">
    <div>
        <label for="fname"> First name: </label>
        <input type="text" id="fname" name="fname" placeholder="{{user.fname}}">
    </div>
    <div>
        <label for="lname"> Last name: </label>
        <input type="text" id="lname" name="lname" placeholder="{{user.lname}}">
    </div>
    <div>
        <label for="gender"> Gender </label>
        <select name="gender">
            <option value="{{user.gender}}" disabled selected>{{user.gender}}</option>
            <option value="male">male</option>
            <option value="famale">famale</option>
        </select>
    </div>
    <div>
        <label for="age"> Age </label>
        <input type="text" id="age" name="age" placeholder="{{user.age}}">
    </div>
    <div>
        <button type="submit" class="for_button">Confirm your data</button>
    </div>
</form>